load_crucible_llvm_module "zuc.bc";
zuccry <- cryptol_load "zuc.cry";

print "Proving equivalence with Cryptol spec.";
AddM_ov <- crucible_llvm_verify "AddM" [] (AddM_spec {{ zuccry::add }}) false abc;
mulpow_ov <- crucible_llvm_verify "MulByPow2" [] (MulPow_spec {{ zuccry::mulpow }}) false abc;
BR_ov <- crucible_llvm_verify "BitReorganization" [] (BR_spec zuccry) false abc;
