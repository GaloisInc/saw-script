    containers,
    mtl,
    prettyprinter,
    text,

    -- internal subpackages/sublibraries in the saw tree
    saw-core,
    saw-script:saw-core-coq

  ghc-options: -Wall -threaded

-- heapster has a test suite.
test-suite prover_tests
  type: exitcode-stdio-1.0
  default-language: Haskell2010

  hs-source-dirs: heapster-saw/proverTests
  main-is: Main.hs

  build-depends:
