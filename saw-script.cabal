  default-language: Haskell2010

  build-depends:
    -- upstream packages from hackage
    base >= 4.5,
    aeson,
    attoparsec,
    attoparsec-aeson,
    bytestring,
    containers,
    graphviz,
    text,
    time

  hs-source-dirs: saw-tools/verif-viewer
  main-is: Main.hs

  GHC-options: -Wall -Werror -Wcompat
  if impl(ghc == 8.0.1)
    ghc-options: -Wno-redundant-constraints
