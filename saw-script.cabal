    lens,
    mtl,
    pretty,
    prettyprinter >= 1.7.0,
    reflection,
    text,
    template-haskell,
    th-abstraction,
    transformers,
    vector,

    -- galois packages from hackage
    bv-sized,

    -- packages in git submodules
    -- (hobbits is for now actually a source-repository-package)
    crucible,
    crucible-llvm,
    hobbits ^>= 1.4,
    language-rust,
    llvm-pretty >= 0.8,
    parameterized-utils,
    what4,

    -- internal subpackages in the saw tree
    saw-core

  hs-source-dirs: heapster-saw/src
  exposed-modules:
    Heapster.CruUtil
    Heapster.GenMonad
    Heapster.IDESupport
    Heapster.HintExtract
    Heapster.Implication
    Heapster.Lexer
