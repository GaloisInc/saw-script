jvm_verify c "updBoolean" [] false
  do {
    a <- jvm_fresh_var "x" (java_array 4 java_bool);
    x <- jvm_fresh_var "x" java_bool;
    aref <- jvm_alloc_array 4 java_bool;
    jvm_array_is aref a;
    jvm_execute_func [aref, jvm_term x];
    jvm_array_is aref {{ update a 0x0 x }};
  }
  do {
    check_goal;
    z3;
  };

