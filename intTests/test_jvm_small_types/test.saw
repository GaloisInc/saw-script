enable_experimental;
c <- java_load_class "Test";

jvm_verify c "addBoolean" [] false
  do {
    x <- jvm_fresh_var "x" java_bool;
    y <- jvm_fresh_var "y" java_bool;
    jvm_execute_func [jvm_term x, jvm_term y];
    jvm_return (jvm_term {{ x ^ y }});
  }
  do {
    check_goal;
    z3;
  };

