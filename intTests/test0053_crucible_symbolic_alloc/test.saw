enable_experimental;

m <- llvm_load_module "test.bc";

let foo_spec check = do {
  n <- llvm_fresh_var "n" (llvm_int 64);
  x_ptr <- llvm_symbolic_alloc false 4 {{ n * 4 }};
  i <- llvm_fresh_var "i" (llvm_int 64);
  llvm_precond {{ n < 2 ^^ 61 }};
  if check then do {
    llvm_precond {{ i < n }};
  } else do {
    return ();
  };
  llvm_execute_func [x_ptr, (llvm_term n), (llvm_term i)];
};

let bar_spec = do {
  n <- llvm_fresh_var "n" (llvm_int 64);
  x_ptr <- llvm_symbolic_alloc false 4 n;
  i <- llvm_fresh_var "i" (llvm_int 64);
  llvm_precond {{ n < 2 ^^ 63 }};
  llvm_precond {{ n && 3 == 0 }};
  llvm_execute_func [x_ptr, (llvm_term n), (llvm_term i)];
};

fails (llvm_verify m "foo" [] false (foo_spec false) abc);
foo_ov <- llvm_verify m "foo" [] false (foo_spec true) abc;
llvm_verify m "bar" [foo_ov] false bar_spec abc;

